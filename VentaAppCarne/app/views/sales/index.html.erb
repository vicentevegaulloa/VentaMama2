<h1>Ventas</h1><br><br>
<%= link_to "Crear Venta", new_sale_path %><br>
<%= link_to "Nuevo Periodo de Venta", new_sale_period_path %><br>
<%= link_to "Ver Periodos de Venta", sale_periods_path %>
<br><br>
<div class="container">
  <div class="columns is-centered is-vcentered">
    <div class="column is-narrow has-text-centered">
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Cliente</th>
      <th>Productos</th>
      <th>Eliminar</th>
      <th>Editar</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |venta|%>
    <tr>
      <th><%= link_to venta.id, sale_path(venta.id)%></th>
      <td><%= link_to venta.client.name , client_path(venta.client.id)%></td>
      <td>
    <% venta.sale_products.each do |sp| %>
    <%= sp.product.name %>(<%= sp.cantidad %>)<br>
    <% end %>
      </td>
      <td><%= link_to "Delete", sale_path(venta.id), method: :delete %></td>
      <td><%= link_to "Edit", edit_sale_path(venta.id)%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>
