<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red"><%= error %></p>
    <% end %>
<% end %>


<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %>
  <br>
  <%= f.label :unit_metric %>
  <%= f.text_field :unit_metric %>
  <br>
  <%= f.label :supp_price %>
  <%= f.text_field :supp_price %>
  <%= f.submit %>
<% end %>
